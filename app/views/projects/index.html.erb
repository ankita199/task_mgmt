<p id="notice"><%= notice %></p>
<div class="card bg-light">
  <div class="card-header">
    Projects
    <%= link_to 'New Project', new_project_path,class: "btn btn-primary float-right" %>

  </div>
    <div class="card-body">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'Create Task', new_task_path(project_id: project.id) ,class: "btn btn-link" %>
                <%= link_to 'Show', project,class: "btn btn-link" %>
                <%= link_to 'Edit', edit_project_path(project),class: "btn btn-link" %>
                <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-link" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>